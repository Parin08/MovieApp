<link rel='stylesheet' type="text/css" href='/stylesheets/flash.css'>
<%if(success && success.length){ %>
  <div class="flash-message">
    <div class="alert alert-success alert-dismissible fade show mb-4 text-center w-50" role="alert">
      <%= success%>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
  </div>
  <% } %>

    <%if(error && error.length){ %>
      <div class="flash-message">
        <div class="alert alert-danger alert-dismissible fade show mb-4 text-center w-50" role="alert">
          <%= error%>
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
      </div>
      <% } %>